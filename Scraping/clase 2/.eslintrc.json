{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console":"warn",
        "max-len":"error",
        "space-before-blocks": "error",
        "semi-spacing":"error",
        "brace-style":[
            "error",
            "1tbs"
        ],
        "object-curly-spacing":[
            "error",
            "always"
        ]
    }
}
